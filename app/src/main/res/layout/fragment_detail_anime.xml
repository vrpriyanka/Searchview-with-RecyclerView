<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_view"
    android:scrollbars="vertical"
    tools:context="com.example.anmieapplication.view.detail.DetailAnimeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_anime"
            android:layout_width="@dimen/dimen_detail_image"
            android:layout_height="@dimen/dimen_detail_image"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:contentDescription="@string/image" />

        <TextView
            android:id="@+id/name_anime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:textSize="@dimen/text_size_title_list_item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/anime_siteurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:autoLink="web" />

        <TextView
            android:id="@+id/anime_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_desc_list_item" />

        <TextView
            android:id="@+id/episode_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_desc_list_item" />

        <TextView
            android:id="@+id/rated_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_desc_list_item" />

        <TextView
            android:id="@+id/members_anime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_item_desc"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_desc_list_item" />

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>